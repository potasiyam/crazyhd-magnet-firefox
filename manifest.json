{

  "manifest_version": 2,
  "name": "CrazyHD Magnetter",
  "version": "1.0.1",

  "description": "Adds magnets for CrazyHD.",

  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.crazyhd.com/*"],
      "js": ["core.js"]
    }
  ],

  "browser_action": {
    "browser_style": true,
    // "default_popup": "popup/choose_page.html",
    "default_popup": "options.html",
    "default_icon": {
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },

  "applications": {
    "gecko": {
      "id": "settings-example@mozilla.org"
    }
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["storage"]

}
